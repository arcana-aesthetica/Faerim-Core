<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <StatDef>
    <defName>Faerim_TotalLevel</defName>
    <label>Level</label>
    <description>The total of all a pawns class levels.</description>
    <category>PawnCombat</category>
    <defaultBaseValue>0</defaultBaseValue>
    <minValue>0</minValue>
  </StatDef>

  <StatDef>
    <defName>Faerim_PawnCurrentArmorClass</defName>
    <label>Armor Class</label>
    <description>A pawns current total armor class after all calculations.</description>
    <category>PawnCombat</category>
    <defaultBaseValue>10</defaultBaseValue>
    <minValue>0</minValue>
    <parts>
        	<li Class="Faerim_Core.StatPart_AddModToAC" />
    </parts>
  </StatDef>

  <StatDef>
    <defName>Faerim_PawnBaseArmorClass</defName>
    <label>Base Armor Class</label>
    <description>A pawns base armor class.</description>
    <category>PawnCombat</category>
    <defaultBaseValue>10</defaultBaseValue>
    <showOnPawns>false</showOnPawns>
    <minValue>0</minValue>
  </StatDef>

  <StatDef>
    <defName>Faerim_ProficiencyBonus</defName>
    <label>Proficiency Bonus</label>
    <description>A pawns proficiency bonus.</description>
    <category>PawnCombat</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0</minValue>
  </StatDef>
</Defs>